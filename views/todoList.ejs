<html>
  <head>
    <title>To Do List</title>
  </head>
  <body>
    <h1>I Have Important Things To Do</h1>
    <form action="/" method="POST">
      <input type="text" name="title">
      <button type="submit">Add Task</button>
    </form>
    <ul>
      <% if (tasks.length > 0) { %> 
        <% for (let task of tasks) { %>
          <li>
          <div><%= task.title %></div>
          <a href="/edit/<%= tasks._id %>" class="edit">
          </a>
          <a href="/remove/<%= tasks._id %>" class="remove">
          </a>
          </li>
        <% } %>
      <% } %> 
    </ul>
  </body>
</html>